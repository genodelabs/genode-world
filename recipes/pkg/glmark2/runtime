				<arg value=":duration=4.0"/>
			</config>
			<route>
				<service name="ROM" label="egl_drv.lib.so">
					<parent label="mesa_gpu_drv.lib.so"/>
				</service>
				<any-service> <parent/> </any-service>
			</route>
		</start>
	</config>

</runtime>
