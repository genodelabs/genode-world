		<rom label="libm.lib.so"/>
		<rom label="libpng.lib.so"/>
		<rom label="mesa.lib.so"/>
		<rom label="stdcxx.lib.so"/>
		<rom label="vfs.lib.so"/>
		<rom label="zlib.lib.so"/>
	</content>

	<config>
		<parent-provides>
			<service name="ROM"/>
			<service name="PD"/>
			<service name="RM"/>
